<div class="container">
  <div class="row">

<div class="product-show">



  <!-- 主图 -->
  <div class="col-xs-12 col-sm-12 col-md-7">
    <% if @project.image.present? %>
      <%= image_tag(@project.image.medium.url, class: "thumbnail img-width") %>
    <% else %>
     <%= image_tag("http://placehold.it/300x300&text=No Pic") %>
    <% end %>
  </div>


  <!-- 商品信息 -->
  <div class="col-xs-12 col-sm-12 col-md-5">

    <!-- 商品标题 -->
    <h2 class="product-title"><%= @project.title %></h2>

    <!-- 商品简述 -->
    <div class="product-description">
      <p>
        <%= simple_format(@project.content) %>
      </p>
    </div>



    <div class="row">
      <!-- <div class="col-sm-6"> -->
        <!-- 商品库存 -->
        <!-- <div class="product-quantity">
          库存量： <%= @product.quantity %>
        </div> -->

        <!-- 商品产地 -->
        <!-- <div class="product-quantity">
          生产地： <%= @product.yieldly %> （正品保障）
        </div> -->
      <!-- </div> -->

      <!-- <div class="col-sm-6"> -->
        <!-- 商品类别 -->
        <!-- <div class="product-quantity">
          类别： <%= @product.category %>
        </div> -->

        <!-- 商品服务 -->
        <!-- <div class="product-quantity">
          包邮： 99元起包邮 | 7天无忧退货
        </div> -->
      <!-- </div> -->
    </div>

    <!-- 按钮区域 -->
    <div class="add-to-cart-buttom row">
      <!-- 加入购物车按钮 -->
      <div class="col-sm-6">

         <%= link_to("立即咨询", add_to_cart_product_path(@product), method: :post, class: "btn btn-danger") %>

      </div>

      <!-- 收藏商品按钮 -->
      <!-- <div class="col-sm-6 product-collection"> -->
        <!-- <%= link_to("添加收藏 - 人气(26)", "#")%> -->
        <!-- <% if current_user && current_user.is_member_of?(@product) %>
          <%= link_to("已收藏（点击取消收藏）", quit_product_path(@product), method: :post) %>
        <% else %>
          <%= link_to("收藏商品", join_product_path(@product), method: :post) %>
        <% end %>
      </div> -->
    </div>

  </div>

  <!-- 商品详情区域 + 推荐展示 -->
  <div class="container">
      <!-- 商品详情区域 + 商品评论区域 -->
      <div class="col-xs-12 col-sm-12 col-md-9 product-particulars">


        <!-- 导航栏 -->
        <div class="row">
          <ul class="nav nav-tabs nav-justified">
            <li class="active">
              <a href="#tab_default_1" data-toggle="tab">项目介绍</a>
            </li>
            <li>
              <a href="#tab_default_2" data-toggle="tab">项目优势</a>
            </li>
            <li>
              <a href="#tab_default_3" data-toggle="tab">项目考察</a>
            </li>
            <li>
              <a href="#tab_default_4" data-toggle="tab">申请流程</a>
            </li>

          </ul>
        </div>

        <div class="tab-content">

          <!-- 商品详情区域 -->
          <div class="product-particulars-box row tab-pane active" id="tab_default_1">
            <%= simple_format(@project.details) %>
          </div>

          <div class="product-particulars-box row tab-pane " id="tab_default_2">
            <%= simple_format(@project.advantage) %>
          </div>

          <div class="product-particulars-box row tab-pane " id="tab_default_3">
            <%= simple_format(@project.observe) %>
          </div>

          <div class="product-particulars-box row tab-pane " id="tab_default_4">
            <%= simple_format(@project.apply) %>
          </div>




        </div>

      </div>


      <!-- 购物指南区 -->
      <div class="col-xs-12 col-sm-12 col-md-3">
        <div class=" ">
          <h5>成功案例</h5>
          <% @stories.each do |activity| %>
            <hr>
            <div class="article-author-title-list">
              <!-- <div class="all_image_css"> -->
                <% if activity.image.present? %>
                  <%= link_to image_tag(activity.image.thumb.url, class: " img-responsive"), story_path(activity) %>
                <% else %>
                  <%= link_to image_tag("http://placehold.it/80x80&text=No Pic", class: "img-circle img-responsive center-block"), activity_path(activity) %>
                <% end %>
              <!-- </div> -->
              <!-- <div class="col-xs-8">
                  <p><%= link_to(activity.title, activity_path(activity)) %></p>
              </div> -->
            </div>
          <% end %>
          <hr>
        </div>



        <!-- 热门项目 -->

        <div class=" article-author-title-list">
          <h5>热门项目</h5>
          <% @products.each do |article_hot| %>
            <hr>
            <div class="row article-show-hot">
              <div class="col-xs-4 all_image_css">
                <% if article_hot.image.present? %>
                  <%= link_to image_tag(article_hot.image.thumb.url, class: "img-rounded img-responsive center-block"), product_path(article_hot) %>
                <% else %>
                  <%= link_to image_tag("http://placehold.it/80x80&text=No Pic", class: "img-responsive center-block"), product_path(article_hot) %>
                <% end %>
              </div>
              <div class="col-xs-8">
                  <p><%= link_to(article_hot.title, product_path(article_hot)) %></p>
              </div>
            </div>
          <% end %>
          <hr>

        </div>

        <!-- 联系尚德信 -->
        <div class=" article-author-title-list">
          <%= image_tag("https://ww3.sinaimg.cn/large/006tKfTcgy1fhveca97b4j30i60datc7.jpg", class: "img-responsive center-block") %>
        </div>
      </div>

  </div>
</div>
</div>
</div>
