        .vernav2 {
            /*width: 230px;*/
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            background: #3E5469;
        }
            /*去控制台*/
            .vernav2 .console-nav {
                width: 100%;
                height: 45px;
                background: #89CC97;
                text-align: center;
                overflow: hidden;
            }

                .vernav2 .console-nav .item {
                    height: 29px;
                    margin: 8px auto;
                }

                .vernav2 .console-nav p {
                    height: 29px;
                    line-height: 29px;
                    text-align: center;
                    color: White;
                    float: left;
                }

                    .vernav2 .console-nav p.icon {
                        display: none;
                        width: 20px;
                        background: #3E5469;
                        border-top-left-radius: 3px;
                        border-bottom-left-radius: 3px;
                    }

                    .vernav2 .console-nav p.nav {
                        display: none;
                        background: #5FA776;
                        border-top-right-radius: 3px;
                        border-bottom-right-radius: 3px;
                    }

            .vernav2 ul {
                list-style: none;
                margin: 0;
            }

                .vernav2 ul li {
                    display: block;
                    border-bottom: 1px solid #455C71;
                    position: relative;
                }

                    .vernav2 ul li .father {
                        overflow: hidden;
                    }

                    .vernav2 ul li .nav_icon {
                        position: relative;
                        width: 50px;
                        height: 50px;
                        float: left;
                        line-height: 50px;
                        text-align: center;
                        font-size: 16px;
                        background: #3E5469;
                    }

                    .vernav2 ul li .father .nav_icon i:before {
                        color: #ddd;
                        position: absolute;
                        top: 17px;
                        left: 17px;
                        z-index: 999;
                    }

                    .vernav2 ul li.current .father .nav_icon i:before {
                        color: white;
                    }

                    .vernav2 ul li .nav_icon b {
                        position: absolute;
                        top: 0;
                        background: #FFC333;
                        width: 50px;
                        height: 50px;
                        -webkit-transition: left .25s;
                        transition: left .25s;
                        font-size: 12px;
                        font-weight: 400;
                        color: White;
                    }

                    .vernav2 ul li.current .father .nav_icon b {
                        left: 0;
                    }

                    .vernav2 ul li .nav_icon.nav1 b {
                        background: #fb6b5b;
                    }

                    .vernav2 ul li .nav_icon.nav2 b {
                        background: #ffc333;
                    }

                    .vernav2 ul li .nav_icon.nav3 b {
                        background: #8ec165;
                    }

                    .vernav2 ul li .nav_icon.nav4 b {
                        background: #65bd77;
                    }

                    .vernav2 ul li .nav_icon.nav5 b {
                        background: #48a75b;
                    }

                    .vernav2 ul li .nav_icon.nav6 b {
                        background: #4cc0c1;
                    }

                    .vernav2 ul li a {
                        display: block;
                        float: left;
                        font-family: 'RobotoBoldCondensed', Arial, Helvetica, sans-serif;
                        color: white;
                        text-transform: uppercase;
                        line-height: 14px;
                        text-decoration: none;
                    }

                        .vernav2 ul li a:hover {
                            background-color: #3E5469;
                        }

                    .vernav2 ul li:hover .nav_icon b {
                        left: 0;
                    }

                .vernav2 ul ul {
                    margin: 0;
                    border-top: 1px solid #455C71;
                    display: none;
                    background: #3E5469;
                }

                    .vernav2 ul ul.show {
                        display: block;
                    }

                    .vernav2 ul ul li {
                        border-bottom: 0;
                    }

                        .vernav2 ul ul li:last-child {
                            border-bottom: 0;
                        }

                        .vernav2 ul ul li a.active {
                            color: White;
                        }

                        .vernav2 ul ul li a i {
                            margin: -12px -15px;
                            line-height: 44px;
                            width: 44px;
                            float: left;
                            margin-right: 10px;
                            font-size: 14px;
                            border-right: 1px solid rgba(255, 255, 255, 0.05);
                            text-align: center;
                            position: relative;
                            overflow: hidden;
                        }

        @media screen and (min-width: 1367px) {
            .vernav2 {
                /*width: 230px*/
            }

                .vernav2 .console-nav .item {
