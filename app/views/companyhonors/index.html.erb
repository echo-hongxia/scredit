<!-- 装饰图片 -->
<div class="row">
<div class="decorative_picture col-md-12" >
  <%= image_tag("https://i.loli.net/2017/08/01/59800a81e044f.png", class: "img-responsive center-block") %>
</div>
</div>
<!-- 装饰图片end-->

<!-- 主体内容部分-->
<div class="container" style="margin-top:30px;">
  <div class="row">

    <div class="col-md-12" style="font-size:2.0em;">
      <!-- <h1>企业荣誉</h1> -->
      <br />

    <% @companyhonors.each do |companyhonor| %>
      <div class="activity-all col-md-4 container">
        <div class="article-box row">

            <div class="">



              <div class="col-md-12">

                <div class="">
                  <% if companyhonor.image.present? %>
                    <%= link_to image_tag(companyhonor.image.companyhonorimg.url, class: "product-list-style-img img-responsive"), "#" %>
                  <% else %>
                    <%= link_to image_tag("http://placehold.it/300x300&text=No Pic", class: "product-list-style-img img-responsive"), "#"%>
                  <% end %>
                </div>

                <div class="companyhonor-title">
                  <%= raw companyhonor.title %>
                </div>

                <div class="">
                  <%= raw companyhonor.description %>
                </div>
              </div>

            </div>

        </div>

      </div>





    <% end %>



  </div>





  </div>



</div>
<!-- 主体内容部分end-->
