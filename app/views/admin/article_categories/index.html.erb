

<div class="account-box">

  <!-- 主标题 -->
  <div class="account-maintitle">
    <i class="fa fa-file-text-o" style="padding-right:8px;"></i>资讯分类列表（Article List）
  </div>

  <!-- 副标题 -->
  <div class="place">
      <span></span>
      <ul class="placeul">
          <li><span><i class="fa fa-map-marker"></i>资讯管理</span>
              <span class="line">/</span> <span>资讯分类列表</span>
          </li>
      </ul>
  </div>
  <!-- "增加分类"按钮 -->
  <br>
  <div class="account-btn">
    <%= link_to(new_admin_article_category_path,:class=> "btn btn-primary" )  do %>
      <i class="fa fa-plus"></i>增加分类
    <% end %>
  </div>

  <!-- 所有文章列表 -->
  <table class="table table-hover table-striped table-advance table-responsive bg-table">
    <thead>
      <tr>
        <td>ID</td>
        <td>分类名称</td>
        <td>发布时间</td>
        <td>操作</td>
      </tr>
    </thead>
    <tbody>
      <% @article_categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.name %></td>
          <td><%= category.created_at %></td>
          <td>
            <%= link_to(edit_admin_article_category_path(category),class: :"btn btn-success")  do %>
              <i class="fa fa-pencil-square-o"></i>
            <% end %>
            <%= link_to(admin_article_category_path(category),class: :"btn btn-danger",method: :delete, data: { confirm: "你确定要删除吗？"})  do %>
              <i class="fa fa-trash"></i>
            <% end %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
