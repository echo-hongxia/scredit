    <!--菜单点击下拉效果-->
    <script type="text/javascript">
    var resize = function () {
        if ($(".vernav2 ul li .father a").css("display") != "block") {
            $(".vernav2 ul li ul").removeAttr("style");
        }
    }
    window.onresize = resize;
    $(function () {
        $('.title').click(function () {
            var $ul = $(this).next('ul');
            $('dd').find('ul').slideUp();
            if ($ul.is(':visible')) {
                $(this).next('ul').slideUp();
            } else {
                $(this).next('ul').slideDown();
            }
        });
        resize();

        jQuery('.vernav2 > ul li a').each(function () {
            var url = jQuery(this).attr('href');
            jQuery(this).click(function () {
                $(".vernav2 > ul li").removeClass("current");
                if (jQuery(url).length > 0) {
                    if (jQuery(url).is(':visible')) {
                        if (!jQuery(this).parents('div').hasClass('menucoll') && !jQuery(this).parents('div').hasClass('menucoll2')) {
                            jQuery(url).slideUp();
                        }
                    } else {
                        jQuery('.vernav2 ul ul').each(function () {
                            jQuery(this).slideUp();
                        });
                        if (!jQuery(this).parents('div').hasClass('menucoll') && !jQuery(this).parents('div').hasClass('menucoll2')) {
                            jQuery(url).slideDown();
                            $(this).parent(".father").parent("li").addClass("current");
                        }
                    }
                    return false;
                }
            });
        });

        var pageName = 'index.aspx';
        var $li = $(".vernav2Ul li");
        for (var i = 0; i < $li.length; i++) {
            var $a = $li.eq(i).find("ul li a");
            for (var j = 0; j < $a.length; j++) {
                if ($a.eq(j).attr("href").indexOf(pageName) >= 0) {
                    $li.eq(i).find(".editor").click();
                    $a.eq(j).addClass("active");
                    if ($(".vernav2 ").width() == 50) {
                        $(".vernav2Ul li ul").hide();
                        resize();
                    }
                }
            }
        }
    });
    </script>
    <!--菜单点击下拉效果.end-->
