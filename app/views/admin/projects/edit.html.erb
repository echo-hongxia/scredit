<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2 class="text-center">编辑项目</h2>

      <hr>
      <%= simple_form_for [@product,@project] do |f| %>
        <div class="form-group">
          <%= f.input :title, :label => "项目名称" %>
          <%= f.input :content, :label => "简述" %>
          <%= f.input :image, as: :file, :label => "项目主图" %>

          <%= f.input :details, as: :wysihtml5, :label => "项目介绍" %>
          <%= f.input :advantage, as: :wysihtml5, :label => "项目优势" %>
          <%= f.input :observe, as: :wysihtml5, :label => "项目考察" %>
          <%= f.input :apply, as: :wysihtml5, :label => "申请流程" %>



        </div>
        <%= f.submit "提交", class: "btn btn-sm btn-default", data: {disable_with: "Submiting..."} %>
      <% end %>

    </div>
  </div>
</div>
