                    left: -17px;
                }

                .vernav2 ul li .father .nav_icon i:before {
                    left: 17px;
                }

                .vernav2 ul li.current .father .nav_icon i:before {
                    left: 17px;
                }

                .vernav2 ul li .father:hover .nav_icon i:before {
                    left: -17px;
                }

                .vernav2 ul li .father .nav_icon b {
                    left: 0;
                }

                .vernav2 ul li:hover .father .nav_icon b span {
                    visibility: visible;
                }

                .vernav2 ul li .father .nav_icon b span {
                    visibility: hidden;
                }

                .vernav2 ul li .father:hover .nav_icon b span {
                    visibility: visible;
                }

                .vernav2 ul li .father a {
                    display: none;
                }

                .vernav2 ul li:hover ul {
                    display: block;
                }

                .vernav2 ul ul {
                    position: absolute;
                    left: 50px;
                    top: 0;
                    z-index: 99999;
                    width: 230px;
                }

                    .vernav2 ul ul li {
                        border-bottom: 0;
                        width: 100%;
                        overflow: hidden;
                    }

