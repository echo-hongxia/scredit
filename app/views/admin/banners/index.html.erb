
<div class="account-box">
  <div class="dropdown text-center"  style="width:200px;">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      广告图楼层选择
      <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <!-- <li><%= link_to("美国移民", product_path(1), target: "_blank",class: "li-style") %></li> -->
      <%  PicCategory.all.each do |category|%>
        <li><%= link_to  category.name, admin_banners_path(category: category.name),class: "li-style"  %></li>
      <% end %>

    </ul>
  </div>
<table class="table table-hover table-bordered table-responsive">
  <thead>
    <tr>
      <td>ID</td>
      <td>图片分类</td>
      <td>广告图片</td>
      <td>广告图片链接</td>
      <td>广告文字</td>
      <td>广告链接</td>
      <td>操作</td>
    </tr>
  </thead>
  <tbody>
  <% @banners.each do |banner| %>
      <tr>
        <td><%= banner.id %></td>
        <td><%= PicCategory.find(banner.category_id).name %></td>
        <td>
          <% if banner.pic.present? %>
            <%= image_tag(banner.pic, class: "thumbnail minipic") %>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class:"thumbnail") %>
          <% end %>
        </td>
        <td>
          <% if banner.img_url.present? %>
            <%= image_tag(banner.img_url, class: "thumbnail minipic") %>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class:"thumbnail") %>
          <% end %>
        </td>
        <td><%= raw banner.title %></td>
        <td><%= banner.img_link %></td>
        <td><%= link_to("Edit", edit_admin_banner_path(banner)) %></td>


      </tr>
    <% end %>
  </tbody>
</table>
</div>
